<%= form_for @changeset, @action, fn f-> %>

    <%= if @changeset.action do %>
    <div class = "alert alert-danger" >
        <p>
            something went wrong!
        </p>
    </div>
    <% end %>

    <%= label f, :username %>
    <%= text_input f, :username %>
    <%= error_tag f, :username %>

    <div>
        <%= submit "Save" %>
    </div>
<% end %>
