<%= form_for @changeset, @action, [multipart: true], fn f -> %>

    <%= if @changeset.action do %>
        <div class="alert alert-danger">
            <p> something went wrong! </p>
        </div>
    <% end %>

    <%= label f, :avatar %>
    <%= file_input f, :avatar %>
    <%= error_tag f, :avatar %>

    <%= label f, :username %>
    <%= text_input f, :username %>
    <%= error_tag f, :username %>

    <div>
        <%= submit "Save" %>
    </div>

<% end %>
